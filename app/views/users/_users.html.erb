<% if users.any? %>
  <ul>
    <% users.each do |user| %>
      <li>
        <div class="outer_container">
          <div class="user_container">
            <div class="userp">
              <img src="#" class="user_image">
            </div>
            <div class="user_prof">
              <div class="user_name">
                <p><%= user.name %></p>
              </div>
              <div class="user_profile">
                <p><%= user.profile %></p>
              </div>
            </div>
            <div class="edit_area">
              <div class="edit_button">
                編集ボタンが入る
              </div>
            </div>
            <div class="button_space">
              <p><%= link_to 'View profile', user_path(user) %></p>
            </div>
          </div>
        </div>
      </li>
    <% end %>
  </ul>
  <%= paginate users %>
<% end %>
