<h1>Users#show</h1>


<div class="outer_container">
  <div class="user_container">
    <div class="userp">
      <%= render 'layouts/user_icon', user: @user %>
    </div>
    <div class="user_prof">
      <div class="user_name">
        <p><%= @user.name %></p>
      </div>
      <div class="user_url">
        <p>
          <% if @user.url.present? %>
          <%= link_to @user.url, @user.url, class:"no-underline"%>
          <% end %>
        </p>
      </div>      
      <div class="user_profile">
        <p><%= @user.profile %></p>
      </div>
    </div>
    <div class="edit_area">
      <%= link_to(edit_user_path)  do %>
      <div class="edit_button">
        編集ボタンが入る
      </div>
      <% end %>
    </div>
    <div class="button_space">
      <p>ファボとか</p>
    </div>
  </div>
</div>

<%= link_to(new_guitar_path, class:"no-underline")  do %>
<div>
  ギター登録ボタン
</div>
<% end %>

<%= link_to(root_path, class:"no-underline")  do %>
<div>
  トップへボタン
</div>
<% end %>
